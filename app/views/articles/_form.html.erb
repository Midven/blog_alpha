<div class="container">
    

    
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @article %>        
            
            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", local:true) do |f| %>
            <!--Dans le scope je dois passer le nom du modèle sur lequel je me base pour faire le form-->
            <!--le url est le chemin de l'action du formulaire-->
            <!--le local:true va dire que le formulaire va être une method POST standard et pas un form avec Ajax-->
            <div class="form-group row mt-4">
                <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
                </div>
            </div>
            
            
            <div class="form-group row mt-4">
                <%= f.label :description, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article" %>
                </div>
            </div>
            
            <div class="form-group row mt-4">
                <%= f.label :category, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.collection_select :category_ids, Category.order(:name), :id, :name, 
                    {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 3, class:"form-select"} %>
                </div>
            </div>
            
            <div class="form-group text-center mt-4">
                <%= f.submit class: "btn btn-outline-dark btn-lg" %><br/>
            </end>
            <% end %>
            
            
        </div>
        
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "row justify-content-center mt-2 text-dark" %>

    </div>
</div>