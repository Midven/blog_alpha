<% if @article.errors.any? %>
<h2>The following errors prevented the article from being saved</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_with(model: @article, local:true) do |f| %>
<!--Dans le scope je dois passer le nom du modèle sur lequel je me base pour faire le form-->
<!--le url est le chemin de l'action du formulaire-->
<!--le local:true va dire que le formulaire va être une method POST standard et pas un form avec Ajax-->
<p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
</p>


<p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %><br/>
</p>
<% end %>