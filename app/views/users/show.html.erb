
<h1 class="text-center mt-4"><%= @user.username %>'s Account</h1>


<%= gravatar_for @user, size: 200 %>

    <% if logged_in? && @user == current_user %>
        <div class="text-center mt-4">
            <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
            <%= button_to "Delete your profile", user_path(@user), class: "btn btn-outline-danger mt-3", method: :delete, onclick: "return confirm('Are you sure?')" %>
        </div>
    <% end %>


<h3 class="text-center mt-4"><%= @user.username %>'s Articles</h3>

<%= render 'articles/article' %>