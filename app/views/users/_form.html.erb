<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @user %>        
            
            <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-light rounded", local:true) do |f| %>
            <!--Dans le scope je dois passer le nom du modèle sur lequel je me base pour faire le form-->
            <!--le url est le chemin de l'action du formulaire-->
            <!--le local:true va dire que le formulaire va être une method POST standard et pas un form avec Ajax-->
            <div class="form-group row mt-4">
                <%= f.label :username, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Your username" %>
                </div>
            </div>
            
            
            <div class="form-group row mt-4">
                <%= f.label :email, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Your email" %>
                </div>
            </div>
            
            <div class="form-group row mt-4">
                <%= f.label :password, class: "col-2 col-form-label text-dark" %>
                <div class="col-10">
                    <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Your password" %>
                </div>
            </div>
            
            <div class="form-group text-center mt-4">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-dark btn-lg") %><br/>
                <!--si l'utilisateur n'est pas encore enregistré alors je mets signup, sinon je mets update account-->
            </end>
            <% end %>
            
            
        </div>
        
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "row justify-content-center mt-2 text-dark" %>

    </div>
</div>